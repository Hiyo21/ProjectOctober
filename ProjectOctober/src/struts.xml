<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN" "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="json-default">
    	<interceptors>
    		<interceptor name="loginInterceptor" class="controller.interceptor.LoginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="loginInterceptor" />
			</interceptor-stack>    		
    	</interceptors>
    	
    	<default-action-ref name="toMainPage" />

        <global-results>
            <result name="login">member/toLoginPage.action</result>
            <result name="error">toErrorPage.action</result>
        </global-results>

		<action name="toMainPage">
			<result>/jsp/Main.jsp</result>
		</action>
		
		<action name="toErrorPage">
			<result>/jsp/Error.jsp</result>
		</action>
	</package> 
	
	<include file="controller/struts/SearchController.html"/>
	<include file="controller/struts/MemberController.html"/>
	<include file="controller/struts/CustomerController.html"/>
	<include file="controller/struts/EnterpriseController.html"/>
	<include file="controller/struts/AdminController.html"/>
</struts>
